{{ 'faq.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- style -%}
  .section-{{ section.id }}-padding {
    background: #F7F5F4;
    margin: 0;
    padding: 0;
    max-width: 100%;
    overflow-x: hidden;
  }
  .c-faq {
    display: flex;
    justify-content: space-between;
    margin: 0 auto;
    gap: 40px;
  }

  @media screen and (min-width: 990px) {
    .c-faq {
      max-width: 1280px;
    }
  }
  
  .c-faq__col:first-child {
    flex-basis: max-content;
    margin: 96px 0;
  }
  .c-faq__col:last-child {
    flex-basis: min-content;
    background: #6cace466;
    position: relative;
  }
  .c-faq__col:last-child:after {
    content: '';
    position: absolute;
    background: #6cace466;
    height: 100%;
    width: 1000%;
    left: 100%;
    top: 0;
  }
  .c-faq__accordion {
    width: auto;
    margin: 0;
    color: #4F4F4F;
    background-color: transparent;
    padding: 0;
  }
  .c-faq__contact {
    min-width: 336px;
    margin: 96px 40px;
  }
  .c-faq__accordion-title {
    margin: 0;
    font-family: 'Gotham Rounded';
    font-weight: 400;
    font-size: 29px;
    line-height: 35px;
    color: #4F4F4F;
    margin-bottom: 65px;
  }
  .c-faq__accordion .c-faq__container {
    margin: 0;
    border-bottom: 1px solid #D9D9D9;
  }
  .c-faq__accordion .c-faq__container:last-child {
    border: none;
  }
  .c-faq__accordion .c-faq__label {
    position: relative;
    padding: 17px 0;
    font-family: 'Gotham Rounded';
    font-weight: 400;
    font-size: 18px;
    line-height: 22px;
    color: #4F4F4F;
    cursor: pointer;
  }
  .c-faq__accordion .c-faq__content {
    height: auto;
    max-height: 0;
    background: transparent;
    font-family: 'Gotham Rounded';
    font-weight: 325;
    font-size: 15px;
    line-height: 23px;
    color: #4F4F4F;
    width: auto;
    max-width: 840px;
  }
  .c-faq__accordion .c-faq__container.is-active .c-faq__content {
    height: auto;
    max-height: 170px;
  }
  .c-faq__accordion .c-faq__content p {
    margin: 0 0 17px 0;
  }
  .c-faq__accordion-description {
    font-family: 'Gotham Rounded';
    font-weight: 325;
    font-size: 15px;
    line-height: 23px;
    color: #4F4F4F;
  }
  .c-faq__accordion .c-faq__label:before {
    right: 0;
  }
  .c-faq__accordion .c-faq__container.is-active .c-faq__label:before {
    font-size: 50px;
  }
{%- endstyle -%}

<div class="o-section__wrapper">
  <div class="page-width section-{{ section.id }}-padding isolate">
    <div class="c-faq">
      <div class="c-faq__col">
        <div class="c-faq__accordion-body">
          <div class="c-faq__accordion">
            <h2 class="c-faq__accordion-title">{{ section.settings.faq_accardion_title }}</h2>
            {%- for block in section.blocks -%}
              <div class="c-faq__container {% if forloop.first %} is-active {% endif %}">
                <div class="c-faq__label"> {{ block.settings.faq_question }} </div>
                <div class="c-faq__content"> {{ block.settings.faq_answer }} </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      </div>
      <div class="c-faq__col">
        <div class="c-faq__contact">
          <h3 class="c-faq__accordion-title">{{ section.settings.faq_contact_title }}</h3>
          <div class="c-faq__accordion-description">
            {{ section.settings.faq_contact_description }}
          </div>
          <a class="c-btn c-btn--icon" href="{{ section.settings.faq_contact_link }}">
